{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended", "schedule:weekly", ":prConcurrentLimitNone", ":prHourlyLimitNone"],
    "packageRules": [
        {
            "automerge": true,
            "matchCurrentVersion": "!/^0/",
            "matchUpdateTypes": ["minor", "patch"]
        },
        {
            "groupName": "dioxus monorepo",
            "matchSourceUrls": ["https://github.com/DioxusLabs/dioxus"]
        },
        {
            "groupName": "leptos monorepo",
            "matchSourceUrls": ["https://github.com/leptos-rs/leptos"]
        },
        {
            "groupName": "mdbook monorepo",
            "matchSourceUrls": ["https://github.com/rust-lang/mdBook"]
        },
        {
            "groupName": "yew monorepo",
            "matchSourceUrls": ["https://github.com/yewstack/yew"]
        }
    ],
    "pre-commit": {
        "enabled": true
    }
}
